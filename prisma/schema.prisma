// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserSchema {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  password     String
  roles        RoleSchema[]   @relation("user_roles")

  @@map("users")
}

model RoleSchema {
 id           Int            @id @default(autoincrement())
 value        String         @unique
 users        UserSchema[]   @relation("user_roles")

 @@map("role")
}
