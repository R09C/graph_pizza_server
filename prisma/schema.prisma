// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserSchema {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  password     String
  roles        UserOnRolesSchema[]

  @@map("users")
}

model RoleSchema {
 id           Int            @id @default(autoincrement())
 value        String         @unique
 users        UserOnRolesSchema[]

 @@map("role")
}

model UserOnRolesSchema {
  user       UserSchema     @relation(fields: [userId], references: [id])
  userId     Int
  role       RoleSchema     @relation(fields: [roleId], references: [id])
  roleId     Int

  @@id([userId, roleId])
  @@map("user_roles")
}

model PizzaSchema {
 id           Int                        @id @default(autoincrement())
 name         String
 ingredients  PizzaOnIngredientsSchema[]

 @@map("pizza")
}

model IngredientSchema {
 id           Int                         @id @default(autoincrement())
 name         String
 pizzas       PizzaOnIngredientsSchema[]

 @@map("ingredient")
}

model PizzaOnIngredientsSchema {
 pizza         PizzaSchema         @relation(fields: [pizzaId], references: [id])
 pizzaId       Int
 ingredient    IngredientSchema    @relation(fields: [ingredientId], references: [id])
 ingredientId  Int

 @@id([pizzaId, ingredientId])
 @@map("pizza_ingredients")
}
